@{
    ViewData["Title"] = "Cadastro Vacina - Sistema Adoção Acapra";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cadastro de Animais - ACAPRA</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .main-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .cadastro-container {
            background-color: #d9d7d7;
            max-width: 650px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
            width: 100%;
        }

        .logo{
            width: 80px;
        }


        .btn-salvar {
            background-color: #5a4b82 !important;
            color: white !important
        }

            .btn-salvar:hover {
                background-color: #483a68 !important;
            }

        .btn-cancelar {
            background-color: #884c4c !important;
            color: white !important;
        }

            .btn-cancelar:hover {
                background-color: #703b3b;
            }
    </style>
</head>
<body>
    <div class="main-wrapper">
        @await Html.PartialAsync("~/Views/Shared/_NavBar.cshtml")

        <main>
            <div class="cadastro-container">
                <div class="text-center mb-4">
                    <img src="~/imagens/logo_roxa_acapra.png" alt="Logo ACAPRA" class="logo" />
                    <h2 class="mt-3 text-uppercase fw-bold text-primary">Cadastro<br />Vacina</h2>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label>Descrição <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" required />
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-salvar px-4">Salvar</button>
                    <button type="reset" class="btn btn-cancelar px-4">Cancelar</button>
                </div>
            </div>
        </main>

        <footer>
            @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
        </footer>
    </div>
</body>
</html>
