@{
    ViewData["Title"] = "Cadastro Animal - Sistema Adoção Acapra";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <title>Formulário de Adoção - ACAPRA</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
        <link rel="stylesheet" href="~/css/Formulario.css" / >
        </style>
    </head>
    <body>
        <div class="container">
            <form class="formulario row g-4">
                <div class="text-center">
                    <img src="logo.png" class="logo mb-2" alt="Logo ACAPRA">
                    <h1>Formulário de Adoção</h1>
                </div>

                <!-- Coluna 1 -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nome <span class="obrigatorio">Obrigatório</span></label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Data de nascimento <span class="obrigatorio">Obrigatório</span></label>
                        <input type="date" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Animal <span class="obrigatorio">Obrigatório</span></label>
                        <select class="form-select" required>
                            <option value="">Selecione</option>
                            <option>Cachorro</option>
                            <option>Gato</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Possui outras animais?</label>
                        <select class="form-select">
                            <option value="">Selecione</option>
                            <option>Sim</option>
                            <option>Não</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">São castrados e vacinados?</label>
                        <select class="form-select">
                            <option value="">Selecione</option>
                            <option>Sim</option>
                            <option>Não</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Você mora em casa ou apartamento?</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Qual sua renda?</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Todos da residência concordam com a adoção?</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="concorda" value="Não">
                            <label class="form-check-label">Não</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="concorda" value="Sim">
                            <label class="form-check-label">Sim</label>
                        </div>
                    </div>
                </div>

                <!-- Coluna 2 -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Contato <span class="obrigatorio">Obrigatório</span></label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sua residência tem local apropriado?</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">O animal terá acesso à rua?</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="acessoRua" value="Não">
                            <label class="form-check-label">Não</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="acessoRua" value="Sim">
                            <label class="form-check-label">Sim</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="acessoRua" value="Talvez">
                            <label class="form-check-label">Talvez</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Você tem condições físicas, mentais e financeiras...?</label>
                        <textarea class="form-control" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Você concorda com a vacinação <strong>OBRIGATÓRIA?</strong></label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="vacinacao" value="Não">
                            <label class="form-check-label">Não</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="vacinacao" value="Sim">
                            <label class="form-check-label">Sim</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Você concorda com a taxa de adoção?</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="taxa" value="Não">
                            <label class="form-check-label">Não</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="taxa" value="Sim">
                            <label class="form-check-label">Sim</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Foto do RG:</label>
                        <input type="file" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Comprovante de Renda:</label>
                        <input type="file" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Foto do local:</label>
                        <input type="file" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Carteira de vacinação e vacinas:</label>
                        <input type="file" class="form-control">
                    </div>
                </div>

                <!-- Botões -->
                <div class="col-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-salvar px-5">Salvar</button>
                    <button type="reset" class="btn btn-cancelar px-5">Cancelar</button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>

}
