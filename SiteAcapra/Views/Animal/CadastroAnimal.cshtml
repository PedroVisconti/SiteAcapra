@{
    ViewData["Title"] = "Cadastro Animal - Sistema Adoção Acapra";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cadastro de Animais - ACAPRA</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .cadastro-container {
            background-color: #d9d7d7;
            max-width: 650px;
            margin-right: 100px;
            padding: 50px;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
            float: right;
        }

        .logo {
            height: 60px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-salvar {
            background-color: #5a4b82;
            color: white;
        }

            .btn-salvar:hover {
                background-color: #483a68;
            }

        .btn-cancelar {
            background-color: #884c4c;
            color: white;
        }

            .btn-cancelar:hover {
                background-color: #703b3b;
            }
    </style>
</head>
<body>

    <div class="container cadastro-container">
        <div class="text-center mb-4">
            <!-- Substitua o src pelo caminho real do logo -->
            <img src="~/images/logo.png" alt="Logo ACAPRA" class="logo" />
            <h2 class="mt-3 text-uppercase fw-bold text-primary">Cadastro<br />Animais</h2>
        </div>

        <form>
            <div class="row mb-3">
                <div class="col">
                    <label>Nome <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" required />
                </div>
                <div class="col">
                    <label>Tamanho <span class="text-danger">*</span></label>
                    <select class="form-select" required>
                        <option selected disabled>Selecione</option>
                        <option>Pequeno</option>
                        <option>Médio</option>
                        <option>Grande</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label>Data de nascimento <span class="text-danger">*</span></label>
                    <input type="date" class="form-control" required />
                </div>
                <div class="col">
                    <label>Raça</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                        <option>Raça 1</option>
                        <option>Raça 2</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label>Espécie <span class="text-danger">*</span></label>
                    <select class="form-select" required>
                        <option selected disabled>Selecione</option>
                        <option>Cão</option>
                        <option>Gato</option>
                    </select>
                </div>
                <div class="col">
                    <label>Vacinas</label>
                    <select class="form-select">
                        <option selected disabled>Selecione</option>
                        <option>Vacinado</option>
                        <option>Não vacinado</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label>Descrição <span class="text-danger">*</span></label>
                <input type="text" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Descrição Saúde</label>
                <input type="text" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Peso <span class="text-danger">*</span></label>
                <input type="number" class="form-control" step="0.01" required />
            </div>

            <div class="mb-3 d-flex flex-wrap gap-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sexo" id="macho" required>
                    <label class="form-check-label" for="macho">Macho</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="sexo" id="femea" required>
                    <label class="form-check-label" for="femea">Fêmea</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="castramento">
                    <label class="form-check-label" for="castramento">Castramento</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="adotado">
                    <label class="form-check-label" for="adotado">Adotado</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="exportar">
                    <label class="form-check-label" for="exportar">Exportar para o mostruário</label>
                </div>
            </div>

            <div class="mb-4">
                <label for="imagem" class="form-label">Inserir uma Imagem</label>
                <input class="form-control" type="file" id="imagem" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-salvar px-4">Salvar</button>
                <button type="reset" class="btn btn-cancelar px-4">Cancelar</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
